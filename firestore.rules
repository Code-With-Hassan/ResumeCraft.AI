/**
 * @fileoverview Firestore Security Rules for ResumeCraft AI.
 *
 * Core Philosophy:
 * This ruleset employs a hybrid security model. User data (profiles and resumes)
 * is strictly controlled by ownership. Blog posts are publicly readable but
 * require authentication and proper ownership for creation, updates, and deletions.
 *
 * Data Structure:
 * - /users/{userId}: User profile information.
 * - /users/{userId}/resumes/{resumeId}:  A user's resume documents.
 * - /blogPosts/{blogPostId}: Publicly accessible blog posts.
 *
 * Key Security Decisions:
 * - User listing is disallowed.
 * - Blog posts are publicly readable.
 * - Write operations on blog posts are restricted to the author.
 *
 * Denormalization for Authorization:
 * - Blog posts contain an `authorId` field to simplify ownership checks.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Controls access to user profile documents.
     * @path /users/{userId}
     * @allow (create) User 'DDVOEvhquuRfeYwJI2JTOoN2XE33' can create their own profile.
     * @deny (create) User 'DDVOEvhquuRfeYwJI2JTOoN2XE33' cannot create a profile with a different ID.
     * @allow (get, list) User 'DDVOEvhquuRfeYwJI2JTOoN2XE33' can read their own profile.
     * @deny (get, list) User 'randomId' cannot read the profile of 'DDVOEvhquuRfeYwJI2JTOoN2XE33'.
     * @allow (update, delete) User 'DDVOEvhquuRfeYwJI2JTOoN2XE33' can update/delete their own profile.
     * @deny (update, delete) User 'randomId' cannot update/delete the profile of 'DDVOEvhquuRfeYwJI2JTOoN2XE33'.
     * @principle Enforces user-ownership for profile data.
     */
    match /users/{userId} {
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == userId;
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow update: if isSignedIn() && isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Controls access to a user's resume documents.
     * @path /users/{userId}/resumes/{resumeId}
     * @allow (create) User 'DDVOEvhquuRfeYwJI2JTOoN2XE33' can create a resume in their own profile.
     * @deny (create) User 'randomId' cannot create a resume in 'DDVOEvhquuRfeYwJI2JTOoN2XE33' profile.
     * @allow (get, list) User 'DDVOEvhquuRfeYwJI2JTOoN2XE33' can read their own resumes.
     * @deny (get, list) User 'randomId' cannot read the resumes of 'DDVOEvhquuRfeYwJI2JTOoN2XE33'.
     * @allow (update, delete) User 'DDVOEvhquuRfeYwJI2JTOoN2XE33' can update/delete their own resumes.
     * @deny (update, delete) User 'randomId' cannot update/delete the resumes of 'DDVOEvhquuRfeYwJI2JTOoN2XE33'.
     * @principle Enforces user-ownership for resume data.
     */
    match /users/{userId}/resumes/{resumeId} {
      allow create: if isSignedIn() && isOwner(userId);
      allow get: if isSignedIn() && isOwner(userId);
      allow list: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isExistingOwner(userId);
      allow delete: if isSignedIn() && isExistingOwner(userId);
    }

    /**
     * @description Controls access to blog post documents.
     * @path /blogPosts/{blogPostId}
     * @allow (create) Any signed-in user can create a blog post if the authorId matches their UID.
     * @deny (create) A signed-in user cannot create a blog post with an authorId that doesn't match their UID.
     * @allow (get, list) Anyone can read (get, list) blog posts.
     * @allow (update, delete) Only the author of a blog post can update or delete it.
     * @deny (update, delete) A user who is not the author cannot update or delete a blog post.
     * @principle Allows public reads but restricts writes to the author.
     */
    match /blogPosts/{blogPostId} {
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      allow get: if true;
      allow list: if true;
      allow update: if isSignedIn() && isExistingOwner(resource.data.authorId);
      allow delete: if isSignedIn() && isExistingOwner(resource.data.authorId);
    }
  }

  // Helper functions
  function isSignedIn() {
    return request.auth != null;
  }

  function isOwner(userId) {
    return request.auth.uid == userId;
  }

  function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
  }
}